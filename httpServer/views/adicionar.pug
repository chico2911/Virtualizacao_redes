extends layout

block content 
    .w3-container.w3-section.w3-card-4
        header.w3-container.w3-teal
            h2 Adicionar Aluno
        form.w3-container(action='/adicionar' method='POST')
            label.w3-text-teal
                b NÃºmero
                    input.w3-input.w3-border.w3-light-grey(type='text' name='id')
            label.w3-text-teal
                b Nome
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
            label.w3-text-teal
                b Instrumento
                    select.w3-input.w3-border.w3-light-grey(type='text' name="instrumento") 
                        for instrumento in lista
                            option(value=instrumento.text)=instrumento.text     
            label.w3-text-teal
                b Curso
                    input.w3-input.w3-border.w3-light-grey(type='text' name='curso')
            label.w3-text-teal
                b Ano Curso
                    input.w3-input.w3-border.w3-light-grey(type='text' name='anoCurso')
            label.w3-text-teal
                b Data Nascimento
                    input.w3-input.w3-border.w3-light-grey(type='text' name='dataNasc')
            p.w3-text-red=error        
            br
            input.w3-btn.w3-teal-tealw3-btn.w3-border.w3-margin-bottom.w3-left.w3-teal(type='submit' value='Adicionar')
            input.w3-btn.w3-border.w3-margin-bottom.w3-right.w3-teal(type='reset' value='Limpar valores')
    .w3-container.w3-teal
        footer(class="w3-container w3-teal")
                br
                a(href="/") Voltar 